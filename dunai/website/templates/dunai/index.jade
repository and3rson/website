extends 'dunai/base.jade'

- load static

block content
    h1 About me

    div(style="text-align: justify")
        img.circle(src="{% static 'images/me55.jpg' %}", style="float: left; min-width: 100px; width: 20%; height: auto; margin: 0.5rem 1rem 0 0")
        p.flow-text My name is Andrew Dunai. I'm in IT for already 10 years. I'm fluent in English, Ukrainian and Russian and can communicate in Polish and German. I've got a lot of experience in all sorts of development, including back-end, web front-end, mobile &amp; desktop development.
        p.flow-text I'm currently working as a tech lead, managing the working processes of developer groups.

        .row
            .col.s12.m6
                ul.collection.with-header
                    li.collection-header.green.white-text Things that make me feel great
                    li.collection-item Python
                    li.collection-item NodeJS
                    li.collection-item Modern front end, material design
                    li.collection-item Game development
                    li.collection-item GTK2
                    li.collection-item Linux &amp; OpenSource
                    li.collection-item PyCharm, Sublime Text, BASH, SSH &amp; TMux
                    li.collection-item High load projects, impossible and mind-breaking tasks
                    li.collection-item Hacking multiplayer game protocols
                    li.collection-item Heavy &amp; thrash metal
                    li.collection-item Traveling, summer festivals and playing drums and electric guitar
                    li.collection-item Ukrainian language
            .col.s12.m6
                ul.collection.with-header
                    li.collection-header.red.white-text Things that make me kill people
                    li.collection-item Bootstrap
                    li.collection-item Ruby
                    li.collection-item GTK3
                    li.collection-item Microsoft products (excluding MS Office &amp; Windows XP)
                    li.collection-item Google products (excluding Android &amp; GMail)
                    li.collection-item Valve games updates &amp; Steam app right now
                    li.collection-item Ukrainian politicians &amp; Russian invaders on the east
                    li.collection-item Ukrainian translation of Dota 2
                    li.collection-item Noobs spamming forums about Arduino
                    li.collection-item Unwillingness to learn


    h1 Contact

    .row
        - for contact in contacts
            .col.s12.m4.l3
                a(href="{{ contact.url }}")
                    .card
                        .card-content(style="padding: 0")
                            - if contact.icon
                                span(class="fa {{ contact.icon }}", style="background-color: {{ contact.bg_color }}; color: {{ contact.text_color }}; font-size: 2rem; line-height: 3rem; width: 3rem; text-align: center; vertical-align: middle")
                            - else
                                img(src="{{ contact.image.url }}", style="width: 3rem; vertical-align: middle")

                            span(style="vertical-align: middle; margin-left: 1rem; color: {{ contact.bg_color }}")= contact.title

    //- .collection
        - for contact in contacts
            a.collection-item(href="{{ contact.url }}")
                - if contact.icon
                    span(class="fa {{ contact.icon }}", style="background-color: {{ contact.bg_color }}; color: {{ contact.text_color }}; font-size: 2rem; line-height: 3rem; width: 3rem; text-align: center; vertical-align: middle")
                - else
                    img(src="{{ contact.image.url }}", style="width: 3rem; vertical-align: middle")

                span(style="vertical-align: middle; margin-left: 1rem")= contact.title
