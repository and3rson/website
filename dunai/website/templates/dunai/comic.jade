extends dunai/base

- load common

block head_extra
    meta(name="og:url", content="{{ request|absolute_url:comic.get_absolute_url }}")
    meta(name="og:type", content="article")
    meta(name="og:title", content="{{ comic.title }}")
    meta(name="og:description", content="{{ comic.comment|cut|strip_tags|nl2sp }}")
    meta(name="og:image", content="{{ request|absolute_url:comic.image.url }}")

block content
    div(style="padding: 1rem 0 0")
        a(href="{% url 'comics:list' %}", data-ps) &lsaquo; Back to comics list
    
    h1.center-align
        = comic.title

    .center-align
        img.responsive-img.z-depth-2(src="{{ comic.image.url }}")
    p.flow-text.center-align
        | {{ comic.comment|safe }}
