extends dunai/base

- load thumbnail

block content
    h1 Projects
        - for category in categories
            h5(data-nav-id="category-{{ category.id }}", style="text-transform: uppercase")
                i.a-inline-block.fi(class="{{ category.icon }}", style="padding: 0.5rem 1rem 0.5rem 0.5rem; font-size: 1em")
                = category.title
            .row
                - for project in category.projects.all
                    .col.s12.m6.l4
                        .card
                            a(href="{% url 'website:project' project.pk %}")
                                .card-image
                                    div(style="width: 100%; height: 0; padding-top: 66.6%; background-image: url({% thumbnail project.cover 600x400 crop %}); background-size: cover")
                                    span.card-title.shaded.truncate
                                        = project.title

