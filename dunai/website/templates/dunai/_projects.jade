- load thumbnail

.row
    - for category in categories
            - for project in category.projects.all
                .col.s12.m6.l4(style="padding: 0 20px 20px")
                    .card
                        a(href="{% url 'website:project' project.pk %}", data-ps)
                            .card-image
                                div(style="width: 100%; height: 0; padding-top: 66.6%; background-image: url({% thumbnail project.cover 600x400 crop %}); background-size: cover")
                                span.card-title.shaded.truncate(style="padding: 10px")
                                    = project.title
                                    | <!--googleoff: all-->
                                    div.tags.small.truncate
                                        - for tag in project.tags.all
                                            span.tag(style="background-color: {{ tag.bg_color }}; color: {{ tag.text_color }}")
                                                = tag.short_title
                                    | <!--googleon: all-->
