- load thumbnail

- for category in categories
    h5.left-align(data-nav-id="category-{{ category.id }}", style="text-transform: uppercase")
        i.fi(class="{{ category.icon }}", style="padding: 0.5rem 1rem 0.5rem 0.5rem; font-size: 2em; vertical-align: middle")
        span(style="vertical-align: middle")= category.title
    .row
        - for project in category.projects.all
            .col.s12.m6.l4
                .card
                    a(href="{% url 'website:project' project.pk %}", data-ps)
                        .card-image
                            div(style="width: 100%; height: 0; padding-top: 66.6%; background-image: url({% thumbnail project.cover 600x400 crop %}); background-size: cover")
                            span.card-title.shaded.truncate
                                = project.title

                                div.tags.small
                                    - for tag in project.tags.all
                                        span.tag(style="background-color: {{ tag.bg_color }}; color: {{ tag.text_color }}")
                                            = tag.short_title
